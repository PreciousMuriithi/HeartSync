# HeartSync Server Environment
# Copy this to .env and customize

# Server
PORT=3001

# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=heartsync-super-secret-change-me-in-production

# CORS - Set to your frontend URL
CORS_ORIGIN=http://localhost:3000

# Database - SQLite file path (relative to server root)
DB_PATH=./data/heartsync.db

# Web Push VAPID Keys (optional, for push notifications)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
