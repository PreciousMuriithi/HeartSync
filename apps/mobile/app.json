{
    "expo": {
        "name": "HeartSync",
        "slug": "heartsync",
        "version": "2.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "dark",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#0A0A0C"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": false,
            "bundleIdentifier": "com.heartsync.app"
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#0A0A0C"
            },
            "package": "com.heartsync.app",
            "permissions": [
                "VIBRATE",
                "USE_BIOMETRIC",
                "USE_FINGERPRINT"
            ]
        },
        "web": {
            "bundler": "metro",
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            "expo-router",
            "expo-secure-store",
            [
                "expo-local-authentication",
                {
                    "faceIDPermission": "Allow HeartSync to use Face ID for biometric lock"
                }
            ]
        ],
        "scheme": "heartsync",
        "extra": {
            "eas": {
                "projectId": "your-project-id"
            }
        }
    }
}